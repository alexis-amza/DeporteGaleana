<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.CambiarTemaActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/idCabeceraCambiarTema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCabecera"
        android:padding="10dp">

        <ImageButton
            android:onClick="onClick"
            android:id="@+id/idbtnRegresarTema"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/btn_regresar"
            android:background="@color/colorTransparente" />

        <ImageView
            android:id="@+id/imgLogoTablaGeneral"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/idbtnRegresarTema"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/logo_menu"/>

        <ImageButton
            android:onClick="onClick"
            android:id="@+id/idbtnAyudaCambiarTema"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/btn_ayuda"
            android:background="@color/colorTransparente"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AJUSTES DEL TEMA"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Selecciona el color del tema"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="17sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_margin="2dp">

        <RelativeLayout
            android:id="@+id/idRelativeLayoutCardsViewsTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                app:columnCount="3"
                app:rowCount="3">

                <android.support.v7.widget.CardView
                    android:id="@+id/idCardColorPrincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:foreground="?selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Color Principal"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/idCardRosaProfundo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorRosaProfundo"
                    android:foreground="?selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Rosa Profundo"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/idCardCoral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorCoral"
                    android:foreground="?selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Negro"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/idCardRojoNaranja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorRojoNaranja"
                    android:foreground="?selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Rojo Naranja"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/idCardPurpura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorPurpura"
                    android:foreground="?selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Purpura"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/idCardTurquesaOscuro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorTurquesaOscura"
                    android:foreground="?selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Turquesa Oscuro"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/idCardAzulMarino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorVinoTinto"
                    android:foreground="?selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Vino Tinto"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/idCardChocolate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorChocolate"
                    android:foreground="?selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Cafe Claro"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/idCardVerdeAzulado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorRojo"
                    android:foreground="?selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Rojo Oscuro"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>



            </android.support.v7.widget.GridLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>