<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idLayoutFondoAgregarNoticia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.AgregarNoticiaActivity"
    android:orientation="vertical"
    android:background="@color/colorFondoClaro">

    <RelativeLayout
        android:id="@+id/idCabeceraNoticias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCabecera"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/idbtnRegresarNoticias"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/btn_regresar"
            android:background="@color/colorTransparente"/>

        <ImageView
            android:id="@+id/imgLogoNoticias"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/idbtnRegresarNoticias"
            android:layout_marginStart="5dp"
            android:src="@drawable/logo_menu" />

        <ImageButton
            android:id="@+id/idbtnAyudaNoticias"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/btn_ayuda"
            android:background="@color/colorTransparente"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/idtxtTituloAgregarNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:textColor="@android:color/black"
                android:hint="Título del Aviso"
                android:textSize="15sp"
                android:ems="10"/>

            <EditText
                android:id="@+id/idtxtCuerpoAgregarNoticia"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/idtxtTituloAgregarNoticia"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:textColor="@android:color/black"
                android:hint="Redacta el aviso aquí"
                android:textSize="15sp"
                android:ems="10"
                android:gravity="top"/>

            <Button
                android:id="@+id/idbtnGuardarAgregarNoticia"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/idtxtCuerpoAgregarNoticia"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="30dp"
                android:text="Guardar Aviso"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/btn_background"/>
        </RelativeLayout>
    </ScrollView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/idRecyclerNoticas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>