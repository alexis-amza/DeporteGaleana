<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idLayoutFondoAgregarPartidos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AgregarPartidosFragment"
    android:padding="20dp"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp">


        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtJornadaAgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:text="Numero de Jornada y Partido"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/idtxtNumeroJornadaAgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtJornadaAgregarPartido"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="0dp"
                android:hint="#Jornada"
                android:textAlignment="center"
                android:textSize="15sp"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:ems="10"/>

            <EditText
                android:id="@+id/idtxtNumeroPartidoAgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtJornadaAgregarPartido"
                android:layout_toEndOf="@+id/idtxtNumeroJornadaAgregarPartido"
                android:layout_marginTop="15dp"
                android:layout_marginStart="0dp"
                android:hint="#Partido"
                android:textAlignment="center"
                android:textSize="15sp"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:ems="10"/>

            <TextView
                android:id="@+id/txtEquiposAgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idtxtNumeroJornadaAgregarPartido"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"
                android:text="Equipos a Enfrentarse"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/idSpinnerEquipo1AgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEquiposAgregarPartido"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginStart="0dp" />

            <Spinner
                android:id="@+id/idSpinnerEquipo2AgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/idSpinnerEquipo1AgregarPartido"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="30dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEquiposAgregarPartido"
                android:layout_toEndOf="@+id/idSpinnerEquipo1AgregarPartido"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp">


                <RadioButton
                    android:id="@+id/idRadioBtnLocalEquipo1AgregarPartido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/idRadioBtnLocalEquipo2AgregarPartido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Local"
                    android:textColor="@android:color/black" />

            </RadioGroup>

            <TextView
                android:id="@+id/txtHoraFechaAgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idSpinnerEquipo2AgregarPartido"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:text="Hora y Fecha del Partido"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/idSpinnerHoraAgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@id/txtHoraFechaAgregarPartido"
                android:layout_marginTop="15dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"/>

            <EditText
                android:id="@+id/idtxtFechaAgregarPartido"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHoraFechaAgregarPartido"
                android:layout_toEndOf="@+id/idSpinnerHoraAgregarPartido"
                android:layout_marginTop="15dp"
                android:layout_marginStart="2dp"
                android:hint="Fecha del Partido"
                android:textAlignment="center"
                android:textSize="15sp"
                android:inputType="date"
                android:textColor="@android:color/black"
                android:ems="10" />

            <ImageButton
                android:id="@+id/idbtnCalendrarioAgregarPartido"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/txtHoraFechaAgregarPartido"
                android:layout_toEndOf="@id/idtxtFechaAgregarPartido"
                android:layout_marginTop="18dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/logo_calendario"
                android:background="@color/colorTransparente"/>

            <TextView
                android:id="@+id/txtLugarAgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idtxtFechaAgregarPartido"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:text="Lugar del Partido"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/idSpinnerLugarAgregarPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@id/txtLugarAgregarPartido"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="0dp"/>

            <Button
                android:id="@+id/idbtnGuardarAgregarPartido"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/idSpinnerLugarAgregarPartido"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="30dp"
                android:text="Guardar Partido"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/btn_background"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/idRecyclerAgregarPatido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idbtnGuardarAgregarPartido"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"/>

        </RelativeLayout>



    </ScrollView>


</RelativeLayout>




