<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PartidosFinalizadosFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/idtxtEquipoLocalPartidosFinalizados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Equipo Local"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/idtxtGolesLocalPartidosFinalizados"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="15sp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:text="VS"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/idtxtGolesVisitantePartidosFinalizados"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="15sp"
                android:inputType="number"/>

            <TextView
                android:id="@+id/idtxtEquipoVisitantePartidosFinalizados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Equipo Visitante"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/idtxtHoraPartidosFinalizados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/idtxtFechaPartidosFinalizados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:text="00/00/0000"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/idtxtLugarPartidosFinalizados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:text="Lugar de juego"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/idbtnGuardarResultadoPartidos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Guardar Resultado"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_background"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/idRecyclerPartidosFinalizados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>